@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<section class="py-5 text-center bg-light">
    <div class="container">
        <div class="row py-lg-5">
            <div class="col-lg-8 col-md-10 mx-auto">
                <h1 class="fw-bold display-4">About Us</h1>
                <p class="lead mb-4">Driving innovation and delivering excellence since 2010</p>
            </div>
        </div>
    </div>
</section>

<!-- Company Story Section -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <img src="~/images/cool_company.jpg" alt="Company Office" class="img-fluid rounded shadow-sm" />
            </div>
            <div class="col-md-6">
                <h2 class="mb-4">Our Story</h2>
                <p class="lead mb-4">
                    Welcome to our company! We are dedicated to providing the best services
                    to our customers. Our team is composed of highly skilled professionals who
                    are passionate about what they do.
                </p>
                <p class="mb-4">
                    Founded in 2010, we've grown from a small startup to an industry leader.
                    We strive for excellence in every project we undertake and are committed
                    to delivering outstanding results for our clients across multiple industries.
                </p>
                <p class="mb-4">
                    Our mission is to create value for our clients through innovative solutions
                    and exceptional service. We believe in building long-term relationships based
                    on trust, integrity, and mutual respect.
                </p>
            </div>
        </div>
    </div>
</section>

